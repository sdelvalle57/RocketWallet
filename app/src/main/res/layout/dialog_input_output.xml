            android:id="@+id/tv_first"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Value"
            android:maxLines="1"
            android:ellipsize="start"
            android:textColor="@android:color/white"/>
    </LinearLayout>
