<resources>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme.Base.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ActionBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/StdActionBar</item>
    </style>

    <style name="WhiteText" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StdActionBar">
        <item name="android:titleTextStyle">@style/StdActionBarTitleText</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="displayOptions">showTitle</item>
        <item name="android:logo">@android:color/transparent</item>
        <item name="android:icon">@android:color/transparent</item> <!-- This does the magic! -->
    </style>

    <style name="StdActionBarTitleText">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <!-- Application theme. -->

    <style name="TextField" parent="@android:style/Widget.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/spinnerItem</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/buttonText</item>
    </style>

    <style name="Header" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black_app</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EditText.White.Floating" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">@dimen/little_text</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Spinner" parent="@android:style/Widget.Spinner">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>
    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">

        <item name="android:textAppearance">@style/TextAppearance.SpinnerItem</item>
        <item name="android:textColor">@color/spinnerItem</item>
    </style>

    <style name="TextAppearance.SpinnerItem" parent="@android:style/TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/spinnerItem</item>
    </style>

    <style name="customAnimations"/>
    <style name="customAnimations.slide">
        <item name="android:windowEnterAnimation">@anim/slide_up_appear</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_disappear</item>
    </style>

    <style name="CustomToolbar" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="popup_animation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/appear</item>
        <item name="android:windowExitAnimation">@anim/disappear</item>
    </style>

</resources>
